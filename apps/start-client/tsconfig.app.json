{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    // Use incremental builds with project references.
    "incremental": true,
    "composite": true,

    // Target modern JavaScript (ES2022+) whilst staying closely compatible with the Node.js module system.
    "target": "ES2022",
    "module": "NodeNext",
    "moduleDetection": "force", // Treat every non-declaration file as a module.
    "esModuleInterop": false, // Do not fiddle with import/export statements
    "verbatimModuleSyntax": true, // Only transform/eliminate type-only import/export statements.
    "allowJs": false, // If you touch this, a puppy dies.
    "rewriteRelativeImportExtensions": true, // Rewrite `.ts` imports to `.js` at build time.
    "erasableSyntaxOnly": true, // Allows to run directly with node and type removal

    // React/Vite specific
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "noEmit": true,

    // Emit source- & declaration maps.
    "declarationMap": true,
    "sourceMap": true,

    // Opt-in to stricter type checking and correctness guard rails. The more the merrier.
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,

    // Path aliases
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@client/*": ["./src/client/*"],
      "@server/*": ["./src/server/*"],
       "@beep/types": ["../../packages/common/types/src/index"],
      "@beep/types/*": ["../../packages/common/types/src/*"],
      "@beep/invariant": ["../../packages/common/invariant/src/index"],
      "@beep/invariant/*": ["../../packages/common/invariant/src/*"],
      "@beep/utils": ["../../packages/common/utils/src/index"],
      "@beep/utils/*": ["../../packages/common/utils/src/*"],
      "@beep/schema": ["../../packages/common/schema/src/index"],
      "@beep/schema/*": ["../../packages/common/schema/src/*"],
      "@beep/constants": ["../../packages/common/constants/src/index"],
      "@beep/constants/*": ["../../packages/common/constants/src/*"],
      "@beep/errors/client": ["../../packages/common/errors/src/client"],
      "@beep/errors/shared": ["../../packages/common/errors/src/shared"],
      "@beep/errors/server": ["../../packages/common/errors/src/server"],
      "@beep/mock": ["../../packages/common/mock/src/index"],
      "@beep/mock/*": ["../../packages/common/mock/src/*"],
      "@beep/shared-domain": ["../../packages/shared/domain/src/index"],
      "@beep/shared-domain/*": ["../../packages/shared/domain/src/*"],
      "@beep/shared-tables": ["../../packages/shared/tables/src/index"],
      "@beep/shared-tables/*": ["../../packages/shared/tables/src/*"],
      "@beep/core-env/client": ["../../packages/core/env/src/client"],
      "@beep/core-env/server": ["../../packages/core/env/src/server"],
      "@beep/core-email": ["../../packages/core/email/src/index"],
      "@beep/core-email/*": ["../../packages/core/email/src/*"],
      "@beep/core-db": ["../../packages/core/db/src/index"],
      "@beep/core-db/*": ["../../packages/core/db/src/*"],
      "@beep/ui/*": ["../../packages/ui/src/*"],
      "@beep/ui-core/*": ["../../packages/ui-core/src/*"],
      "@beep/iam-domain": ["../../packages/iam/domain/src/index"],
      "@beep/iam-domain/*": ["../../packages/iam/domain/src/*"],
      "@beep/iam-tables": ["../../packages/iam/tables/src/index"],
      "@beep/iam-tables/*": ["../../packages/iam/tables/src/*"],
      "@beep/iam-infra": ["../../packages/iam/infra/src/index"],
      "@beep/iam-infra/*": ["../../packages/iam/infra/src/*"],
      "@beep/iam-sdk": ["../../packages/iam/sdk/src/index"],
      "@beep/iam-sdk/*": ["../../packages/iam/sdk/src/*"],
      "@beep/iam-ui": ["../../packages/iam/ui/src/index"],
      "@beep/iam-ui/*": ["../../packages/iam/ui/src/*"],
      "@beep/files-domain": ["../../packages/files/domain/src/index"],
      "@beep/files-domain/*": ["../../packages/files/domain/src/*"],
      "@beep/files-tables": ["../../packages/files/tables/src/index"],
      "@beep/files-tables/*": ["../../packages/files/tables/src/*"],
      "@beep/files-infra": ["../../packages/files/infra/src/index"],
      "@beep/files-infra/*": ["../../packages/files/infra/src/*"],
      "@beep/files-sdk": ["../../packages/files/sdk/src/index"],
      "@beep/files-sdk/*": ["../../packages/files/sdk/src/*"],
      "@beep/files-ui": ["../../packages/files/ui/src/index"],
      "@beep/files-ui/*": ["../../packages/files/ui/src/*"],
      "@beep/runtime-server": ["../../packages/runtime/server/src/index"],
      "@beep/runtime-server/*": ["../../packages/runtime/server/src/*"],
      "@beep/runtime-client": ["../../packages/runtime/client/src/index"],
      "@beep/runtime-client/*": ["../../packages/runtime/client/src/*"]
    },

    // Miscellaneoaus
    "skipLibCheck": true, // Skip type checking of third party libraries.
    "noErrorTruncation": true, // Do not truncate error messages.
    "types": ["vite/client"],
    "plugins": [
      {
        "name": "@effect/language-service",
        "transform": "@effect/language-service/transform",
        "namespaceImportPackages": ["effect", "@effect/*"]
      }
    ]
  },
  "include": ["src"],

}
