{
  "name": "@beep/server",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "The server template",
  "repository": {
    "type": "git",
    "url": "git@github.com:kriegcloud/beep-effect.git",
    "directory": "apps/server"
  },
  "main": "build/esm/server.js",
  "module": "build/esm/server.js",
  "types": "build/dts/server.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "lint": "biome check .",
    "test": "bun test",
    "lint:fix": "biome check . --write",
    "check": "tsc -b tsconfig.json",
    "dotenvx": "dotenvx run -f ../../.env --",
    "lint:circular": "bunx madge -c .",
    "coverage": "bun test --coverage",
    "dev": "dotenvx run -f ../../.env -- bun --watch src/server.ts",
    "start": "dotenvx -e ../../.env bun build/esm/server.js",
    "start:source": "bun run start",
    "circular": "madge --circular src/server.ts"
  },
  "dependencies": {
    "@effect/sql": "catalog:",
    "@effect/sql-pg": "catalog:",
    "@effect/sql-drizzle": "catalog:",
    "@effect/experimental": "catalog:",
    "@opentelemetry/exporter-trace-otlp-http": "catalog:",
    "@opentelemetry/sdk-trace-base": "catalog:",
    "@opentelemetry/sdk-trace-web": "catalog:",
    "@opentelemetry/sdk-metrics": "catalog:",
    "@opentelemetry/exporter-logs-otlp-http": "catalog:",
    "@opentelemetry/sdk-logs": "catalog:",
    "@opentelemetry/exporter-metrics-otlp-proto": "catalog:",
    "@effect/opentelemetry": "catalog:",
    "@beep/runtime-server": "workspace:^",
    "@faker-js/faker": "catalog:",
    "postgres": "catalog:",
    "@effect/platform": "catalog:",
    "@effect/rpc": "catalog:",
    "@effect/platform-bun": "catalog:",
    "@effect/cluster": "catalog:",
    "@effect/workflow": "catalog:",
    "resend": "catalog:",
    "drizzle-orm": "catalog:",
    "next": "catalog:",
    "effect": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "stripe": "catalog:",
    "zod": "catalog:",
    "@better-auth/stripe": "catalog:",
    "@better-auth/core": "catalog:",
    "@dub/better-auth": "catalog:",
    "@simplewebauthn/server": "catalog:",
    "dub": "catalog:",
    "jose": "catalog:",
    "better-auth": "catalog:",
    "uuid": "catalog:"
  },
  "devDependencies": {
    "@effect/docgen": "catalog:",
    "@total-typescript/ts-reset": "catalog:"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
