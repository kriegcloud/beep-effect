{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://beep.dev/schemas/workflow-definition.v1.json",
  "title": "WorkflowDefinition (v1)",
  "type": "object",
  "required": ["id", "version", "initial", "steps", "transitions"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "version": { "type": "string" },
    "schemaVersion": { "type": "string" },
    "initial": { "type": "string", "minLength": 1 },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/StepDefinition" }
    },
    "transitions": {
      "type": "array",
      "items": { "$ref": "#/$defs/TransitionDefinition" }
    },
    "metadata": { "type": "object", "additionalProperties": true }
  },
  "$defs": {
    "JSONValue": {
      "description": "Permissive JSON value (used for schema/uiSchema/annotations/metadata)",
      "oneOf": [
        { "type": "string" },
        { "type": "number" },
        { "type": "boolean" },
        { "type": "null" },
        { "type": "array", "items": { "$ref": "#/$defs/JSONValue" } },
        {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/JSONValue" }
        }
      ]
    },
    "JsonLogicRule": {
      "description": "A JsonLogic rule or boolean catch-all",
      "oneOf": [{ "type": "boolean" }, { "type": "object", "additionalProperties": true }]
    },
    "StepDefinition": {
      "type": "object",
      "required": ["id", "schema"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "schema": { "type": "object", "additionalProperties": true },
        "uiSchema": { "type": "object", "additionalProperties": true },
        "annotations": { "type": "object", "additionalProperties": true }
      }
    },
    "TransitionDefinition": {
      "type": "object",
      "required": ["from", "to"],
      "additionalProperties": false,
      "properties": {
        "from": { "type": "string", "minLength": 1 },
        "to": { "type": "string", "minLength": 1 },
        "when": { "$ref": "#/$defs/JsonLogicRule" },
        "priority": { "type": "number" },
        "metadata": { "type": "object", "additionalProperties": true }
      }
    }
  }
}
