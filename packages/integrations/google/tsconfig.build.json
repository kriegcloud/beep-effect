{
  "extends": "./tsconfig.src.json",
  "compilerOptions": {
    "types": ["node", "bun"],

    "outDir": "build/esm",
    "declarationDir": "build/dts",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "stripInternal": true
  },
  "references": [
    {
      "path": "../../common/types/tsconfig.build.json"
    },
    {
      "path": "../../common/identity/tsconfig.build.json"
    },
    {
      "path": "../../common/constants/tsconfig.build.json"
    },
    {
      "path": "../../common/errors/tsconfig.build.json"
    },
    {
      "path": "../env/tsconfig.build.json"
    },
    {
      "path": "../../ui/ui/tsconfig.build.json"
    },
    {
      "path": "../../ui/core/tsconfig.build.json"
    }
  ]
}
