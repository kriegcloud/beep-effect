{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.mts", "src/**/*.cts", "src/**/*.d.ts"],
  "exclude": [],
  "references": [
    {
      "path": "../common/types"
    },
    {
      "path": "../common/invariant"
    },
    {
      "path": "../common/utils"
    },
    {
      "path": "../common/schema"
    },
    {
      "path": "../common/constants"
    },
    {
      "path": "../shared/domain"
    }
  ],
  "compilerOptions": {
    "types": ["node", "bun"],
    "outDir": "build/src",

    "rootDir": "src",

    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
