{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "references": [
    {
      "path": "../env"
    },
    {
      "path": "../../common/types"
    },
    {
      "path": "../../common/constants"
    },
    {
      "path": "../../common/errors"
    },
    {
      "path": "../../common/invariant"
    },
    {
      "path": "../../common/utils"
    },
    {
      "path": "../../common/schema"
    }
  ],
  "compilerOptions": {
    "types": ["node", "bun"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",

    "moduleResolution": "NodeNext",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["./*"],
      "@beep/core-db/*": ["./src/*"],
      "@beep/core-env/server": ["../env/src/server"],
      "@beep/core-env/client": ["../env/src/client"],
      "@beep/types": ["../../common/types/src/index"],
      "@beep/types/*": ["../../common/types/src/*"],
      "@beep/errors/shared": ["../../common/errors/src/shared"],
      "@beep/errors/server": ["../../common/errors/src/server"],
      "@beep/constants": ["../../common/constants/src/index"],
      "@beep/constants/*": ["../../common/constants/src/*"],
      "@beep/utils": ["../../common/utils/src/index"],
      "@beep/utils/*": ["../../common/utils/src/*"],
      "@beep/invariant": ["../../common/invariant/src/index"],
      "@beep/invariant/*": ["../../common/invariant/src/*"],
      "@beep/schema": ["../../common/schema/src/index"],
      "@beep/schema/*": ["../../common/schema/src/*"]
    }
  }
}
