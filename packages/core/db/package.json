{
  "name": "@beep/core-db",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "A library for creating scoped & partitioned database clients",
  "publishConfig": {
    "access": "restricted",
    "directory": "build"
  },
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json",
    "./*": "./src/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kriegcloud/beep-effect.git",
    "directory": "packages/core/db"
  },
  "scripts": {
    "build": "pnpm build-esm && pnpm build-cjs && pnpm build-annotate",
    "dev": "tsc -b tsconfig.build.json --watch",
    "build-esm": "tsc -b tsconfig.build.json",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "check": "tsc -b tsconfig.json",
    "test": "vitest run",
    "clean": "rm -rf .tsbuildinfo node_modules coverage .next out dist build .turbo",
    "coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "lint:circular": "pnpm madge -c ."
  },
  "peerDependencies": {
    "@effect/experimental": "*",
    "drizzle-orm": "*",
    "effect": "*",
    "@effect/sql-pg": "*",
    "@effect/sql": "*",
    "@effect/sql-drizzle": "*",
    "@effect/platform": "*",
    "sql-formatter": "*",
    "postgres": "*",
    "@rocicorp/zero": "*",
    "@beep/core-env": "workspace:^",
    "@beep/constants": "workspace:^",
    "@beep/errors": "workspace:^",
    "@beep/invariant": "workspace:^",
    "@beep/utils": "workspace:^",
    "@beep/schema": "workspace:^",
    "drizzle-zero": "*"
  },
  "devDependencies": {
    "@beep/types": "workspace:^",
    "@types/bun": "*",
    "@testcontainers/postgresql": "*",
    "testcontainers": "*"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
