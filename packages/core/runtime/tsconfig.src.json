{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "references": [
    {
      "path": "../env"
    },
    {
      "path": "../db"
    },
    {
      "path": "../../common/errors"
    },
    {
      "path": "../../common/constants"
    }
  ],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@beep/core-runtime/*": ["./src/*"],
      "@beep/core-env/server": ["../env/src/server"],
      "@beep/core-env/client": ["../env/src/client"],
      "@beep/errors/shared": ["../../common/errors/src/shared"],
      "@beep/errors/client": ["../../common/errors/src/client"],
      "@beep/constants": ["../../common/constants/src/index"],
      "@beep/constants/*": ["../../common/constants/src/*"],
      "@beep/core-db": ["../db/src/index"],
      "@beep/core-db/*": ["../db/src/*"]
    }
  }
}
