{
  "name": "@beep/comms-tables",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "Communications module - Database tables",
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "directory": "dist",
    "linkDirectory": false
  },
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json",
    "./schema": "./src/schema.ts",
    "./*": "./src/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kriegcloud/beep-effect.git",
    "directory": "packages/comms/tables"
  },
  "scripts": {
    "build": "bun run build-esm && bun run build-cjs && bun run build-annotate",
    "dev": "tsc -b tsconfig.build.json --watch",
    "build-esm": "tsc -b tsconfig.build.json",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "check": "tsc -b tsconfig.json",
    "test": "bun test",
    "coverage": "bun test --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "lint:circular": "bunx madge -c ."
  },
  "peerDependencies": {
    "@beep/shared-domain": "workspace:^",
    "@beep/comms-domain": "workspace:^",
    "@beep/shared-tables": "workspace:^",
    "drizzle-orm": "catalog:"
  },
  "devDependencies": {
    "@beep/shared-domain": "workspace:^",
    "@beep/comms-domain": "workspace:^",
    "@beep/shared-tables": "workspace:^",
    "@effect/docgen": "catalog:",
    "@total-typescript/ts-reset": "catalog:",
    "drizzle-orm": "catalog:"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
