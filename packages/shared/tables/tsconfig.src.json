{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "references": [
    {
      "path": "../domain"
    },
    {
      "path": "../../common/types"
    },
    {
      "path": "../../common/schema"
    },
    {
      "path": "../../common/utils"
    },
    {
      "path": "../../common/invariant"
    }
  ],
  "compilerOptions": {
    "types": ["node", "bun"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",

    "moduleResolution": "NodeNext",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["./*"],
      "@beep/shared-tables/*": ["./src/*"],
      "@beep/shared-domain": ["../domain/src/index"],
      "@beep/shared-domain/*": ["../domain/src/*"],
      "@beep/types": ["../../common/types/src/index"],
      "@beep/types/*": ["../../common/types/src/*"],
      "@beep/schema": ["../../common/schema/src/index"],
      "@beep/schema/*": ["../../common/schema/src/*"],
      "@beep/utils": ["../../common/utils/src/index"],
      "@beep/utils/*": ["../../common/utils/src/*"],
      "@beep/invariant": ["../../common/invariant/src/index"],
      "@beep/invariant/*": ["../../common/invariant/src/*"]
    }
  }
}
