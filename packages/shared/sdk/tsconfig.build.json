{
  "extends": "./tsconfig.src.json",
  "compilerOptions": {
    "types": ["node", "bun"],
    "outDir": "build/esm",
    "declarationDir": "build/dts",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2023",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "stripInternal": true
  },
  "references": [
    {
      "path": "../../core/env/tsconfig.build.json"
    },
    {
      "path": "../../common/identity/tsconfig.build.json"
    },
    {
      "path": "../../common/schema/tsconfig.build.json"
    },
    {
      "path": "../../common/utils/tsconfig.build.json"
    },
    {
      "path": "../../common/errors/tsconfig.build.json"
    },
    {
      "path": "../../common/constants/tsconfig.build.json"
    },
    {
      "path": "../../common/invariant/tsconfig.build.json"
    },
    {
      "path": "../../common/types/tsconfig.build.json"
    },
    {
      "path": "../domain/tsconfig.build.json"
    },
    {
      "path": "../infra/tsconfig.build.json"
    }
  ],
  "include": ["src"]
}
