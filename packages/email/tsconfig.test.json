{
  "extends": "../../tsconfig.base.json",
  "include": ["test"],
  "references": [
    {
      "path": "tsconfig.src.json"
    },
    {
      "path": "../common/types"
    },
    {
      "path": "../ui"
    }
  ],
  "compilerOptions": {
    "types": ["node"],
    "tsBuildInfoFile": ".tsbuildinfo/test.tsbuildinfo",
    "rootDir": "test",
    "noEmit": true
  },
  "paths": {
    "@beep/email": ["./src/index"],
    "@beep/email/*": ["./src/*"],
    "@beep/ui/*": ["../ui/src/*"],
    "@beep/types": ["../common/types/src/index"],
    "@beep/types/*": ["../common/types/src/*"]
  }
}
