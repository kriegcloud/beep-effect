{
  "name": "@beep/db-admin",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "A library for migrations, seeds & db admin",
  "private": false,
  "publishConfig": {
    "access": "restricted",
    "directory": "build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kriegcloud/beep-effect.git",
    "directory": "packages/persistence/db-admin"
  },
  "scripts": {
    "build": "pnpm build-esm && pnpm build-cjs && pnpm build-annotate",
    "dev": "tsc -b tsconfig.build.json --watch",
    "build-esm": "tsc -b tsconfig.build.json",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "check": "tsc -b tsconfig.json",
    "test": "vitest run",
    "clean": "rm -rf .tsbuildinfo node_modules coverage .next out dist build .turbo",
    "coverage": "vitest run --coverage",
    "db:generate": "TSX_TSCONFIG_PATH=./tsconfig.tsx.json NODE_OPTIONS='--import tsx' pnpm dotenvx drizzle-kit generate",
    "db:migrate": "TSX_TSCONFIG_PATH=./tsconfig.tsx.json NODE_OPTIONS='--import tsx' pnpm dotenvx drizzle-kit migrate",
    "db:push": "TSX_TSCONFIG_PATH=./tsconfig.src.json NODE_OPTIONS='--import tsx' pnpm dotenvx drizzle-kit push",
    "db:studio": "TSX_TSCONFIG_PATH=./tsconfig.src.json NODE_OPTIONS='--import tsx' pnpm dotenvx drizzle-kit studio",
    "db:reset": "bun src/scripts/ResetDatabase.ts",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "dotenvx": "dotenvx run -f ../../../.env --",
    "lint:circular": "pnpm madge -c .",
    "execute": "TSX_TSCONFIG_PATH=./tsconfig.src.json NODE_OPTIONS='--import tsx' pnpm dotenvx tsx ./src/execute.ts"
  },
  "dependencies": {
    "@beep/db-scope": "workspace:^",
    "@beep/iam-tables": "workspace:^",
    "@beep/iam-domain": "workspace:^",
    "@effect/sql-pg": "*",
    "@effect/sql-drizzle": "*",
    "@effect/sql": "*",
    "@effect/experimental": "*",
    "@beep/shared-tables": "workspace:*",
    "@beep/wms-tables": "workspace:*",
    "@beep/iam-db": "workspace:*",
    "@beep/schema": "workspace:*",
    "@beep/types": "workspace:*",
    "@beep/utils": "workspace:*",
    "@beep/invariant": "workspace:*",
    "@beep/shared-domain": "workspace:*",
    "@types/pg": "*",
    "drizzle-kit": "*",
    "drizzle-orm": "*",
    "effect": "*",
    "tsx": "*",
    "pg": "*",
    "@beep/env": "workspace:*",
    "drizzle-seed": "*"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
