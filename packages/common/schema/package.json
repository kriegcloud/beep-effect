{
  "name": "@beep/schema",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "A library for `effect/Schema` stuff",
  "publishConfig": {
    "access": "restricted",
    "directory": "build"
  },
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json",
    "./*": "./src/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kriegcloud/beep-effect.git",
    "directory": "packages/common/schema"
  },
  "scripts": {
    "build": "bun run build-esm && bun run build-cjs && bun run build-annotate",
    "dev": "tsc -b tsconfig.build.json --watch",
    "build-esm": "tsc -b tsconfig.build.json",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "check": "tsc -b tsconfig.json",
    "test": "bun test",
    "clean": "rm -rf .tsbuildinfo node_modules coverage .next out dist build .turbo",
    "coverage": "bun test --coverage",
    "lint": "biome check .",
    "dotenvx": "dotenvx run -f ../../../.env --",
    "lint:fix": "biome check . --write",
    "execute": "bun run dotenvx -- bunx tsx --tsconfig ./tsconfig.src.json ./src/execute.ts",
    "lint:circular": "bunx madge -c ."
  },
  "dependencies": {
    "effect": "catalog:",
    "@beep/types": "workspace:^",
    "@beep/invariant": "workspace:^",
    "@beep/utils": "workspace:^",
    "@faker-js/faker": "catalog:",
    "@standard-schema/spec": "catalog:",
    "@effect/sql": "catalog:",
    "drizzle-orm": "catalog:",
    "@effect/experimental": "catalog:",
    "mutative": "catalog:",
    "zod": "catalog:",
    "uuid": "catalog:",
    "randexp-ts": "catalog:"
  },
  "devDependencies": {
    "type-fest": "catalog:",
    "@beep/testkit": "workspace:^",
    "@types/bun": "catalog:"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
