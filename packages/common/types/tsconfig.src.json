{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "references": [
    {
      "path": "../../../tooling/testkit"
    }
  ],
  "compilerOptions": {
    "types": ["bun", "node"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",

    "moduleResolution": "NodeNext",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["./*.js"],
      "@beep/types/*": ["./src/*.js"],
      "@beep/testkit": ["../../../tooling/testkit/src/index.js"],
      "@beep/testkit/*": ["../../../tooling/testkit/src/*.js"]
    }
  }
}
