{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "references": [
    {
      "path": "../types"
    },
    {
      "path": "../schema"
    },
    {
      "path": "../utils"
    },
    {
      "path": "../invariant"
    }
  ],
  "compilerOptions": {
    "types": ["node", "bun"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",

    "moduleResolution": "NodeNext",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["./*"],
      "@beep/rete": ["./src/index"],
      "@beep/rete/*": ["./src/*"],
      "@beep/types": ["../types/src/index"],
      "@beep/types/*": ["../types/src/*"],
      "@beep/utils": ["../utils/src/index"],
      "@beep/utils/*": ["../utils/src/*"],
      "@beep/invariant": ["../invariant/src/index"],
      "@beep/invariant/*": ["../invariant/src/*"],
      "@beep/schema": ["../schema/src/index"],
      "@beep/schema/*": ["../schema/src/*"]
    }
  }
}
