{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "references": [
    {
      "path": "../types"
    },
    {
      "path": "../invariant"
    },
    {
      "path": "../../../tooling/testkit"
    }
  ],
  "compilerOptions": {
    "types": ["bun", "node"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",

    "moduleResolution": "bundler",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["./*"],
      "@beep/testkit": ["../../../tooling/testkit/src/index"],
      "@beep/testkit/*": ["../../../tooling/testkit/src/*"],
      "@beep/utils/*": ["./src/*"],
      "@beep/types": ["../types/src/index"],
      "@beep/types/*": ["../types/src/*"],
      "@beep/invariant": ["../invariant/src/index"],
      "@beep/invariant/*": ["../invariant/src/*"]
    }
  }
}
