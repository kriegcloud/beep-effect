{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "references": [],
  "compilerOptions": {
    "types": ["node", "bun"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",

    "moduleResolution": "NodeNext",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["./*"],
      "@beep/invariant/*": ["./src/*"]
    }
  }
}
