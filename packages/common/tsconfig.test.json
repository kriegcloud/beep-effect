{
  "extends": "../../tsconfig.base.json",
  "include": [
    "test",
    "src/**/*.test.ts"
  ],
  "references": [
    {
      "path": "tsconfig.src.json"
    }
  ],
  "compilerOptions": {
    "types": [
      "node"
    ],
    "tsBuildInfoFile": ".tsbuildinfo/test.tsbuildinfo",
    "rootDir": "test",
    "noEmit": true
  },
  "paths": {
    "@beep/common": [
      "./src/index"
    ],
    "@beep/common/*": [
      "./src/*"
    ]
  }
}
