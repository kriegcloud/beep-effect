{
  "extends": "../../../tsconfig.base.json",
  "include": ["test"],
  "references": [
    {
      "path": "tsconfig.src.json"
    },
    {
      "path": "../types"
    },
    {
      "path": "../utils"
    },
    {
      "path": "../schema"
    },
    {
      "path": "../invariant"
    },
    {
      "path": "../constants"
    }
  ],
  "compilerOptions": {
    "types": ["node", "bun"],
    "tsBuildInfoFile": ".tsbuildinfo/test.tsbuildinfo",
    "rootDir": "test",
    "noEmit": true,
    "paths": {
      "*": ["./*"],
      "@beep/errors/*": ["./src/*"],
      "@beep/types": ["../types/src/index"],
      "@beep/types/*": ["../types/src/*"],
      "@beep/utils": ["../utils/src/index"],
      "@beep/utils/*": ["../utils/src/*"],
      "@beep/invariant": ["../invariant/src/index"],
      "@beep/invariant/*": ["../invariant/src/*"],
      "@beep/schema": ["../schema/src/index"],
      "@beep/schema/*": ["../schema/src/*"],
      "@beep/constants": ["../constants/src/index"],
      "@beep/constants/*": ["../constants/src/*"]
    }
  }
}
