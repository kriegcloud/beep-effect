{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "exclude": ["vitest.config.ts", "src/**/*.test.ts"],
  "references": [
    {
      "path": "../../ui"
    },
    {
      "path": "../sdk"
    },
    {
      "path": "../domain"
    },
    {
      "path": "../../common/schema"
    },
    {
      "path": "../../common/types"
    }
  ],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@beep/iam-ui/*": ["./src/*"],
      "@beep/ui/*": ["../../ui/src/*"],
      "@beep/types": ["../../common/types/src/index"],
      "@beep/types/*": ["../../common/types/src/*"],
      "@beep/schema": ["../../common/schema/src/index"],
      "@beep/schema/*": ["../../common/schema/src/*"],
      "@beep/iam-sdk": ["../sdk/src/index"],
      "@beep/iam-sdk/*": ["../sdk/src/*"],
      "@beep/iam-domain": ["../domain/src/index"],
      "@beep/iam-domain/*": ["../domain/src/*"]
    }
  }
}
