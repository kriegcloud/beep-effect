{
  "extends": "../../../tsconfig.base.jsonc",
  "include": ["src"],
  "exclude": ["build"],
  "references": [
    {
      "path": "../../ui/ui"
    },
    {
      "path": "../../ui/core"
    },
    {
      "path": "../client"
    },
    {
      "path": "../../common/constants"
    },
    {
      "path": "../../runtime/client"
    },
    {
      "path": "../../shared/domain"
    },
    {
      "path": "../../shared/env"
    },
    {
      "path": "../../shared/ui"
    },
    {
      "path": "../../shared/client"
    }
  ],
  "compilerOptions": {
    "types": ["node", "bun"],
    "outDir": "build/src",
    "rootDir": "src",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2024",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
