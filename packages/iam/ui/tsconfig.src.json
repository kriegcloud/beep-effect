{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "exclude": ["vitest.config.ts", "src/**/*.test.ts"],
  "references": [
    {
      "path": "../../ui"
    },
    {
      "path": "../sdk"
    },
    {
      "path": "../domain"
    },
    {
      "path": "../../common/schema"
    },
    {
      "path": "../../common/types"
    },
    {
      "path": "../../core/env"
    },
    {
      "path": "../../common/constants"
    },
    {
      "path": "../../common/errors"
    },
    {
      "path": "../../common/invariant"
    },
    {
      "path": "../../common/utils"
    },
    {
      "path": "../../runtime/client"
    }
  ],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@beep/iam-ui/*": ["./src/*"],
      "@beep/ui/*": ["../../ui/src/*"],
      "@beep/types": ["../../common/types/src/index"],
      "@beep/types/*": ["../../common/types/src/*"],
      "@beep/schema": ["../../common/schema/src/index"],
      "@beep/schema/*": ["../../common/schema/src/*"],
      "@beep/iam-sdk": ["../sdk/src/index"],
      "@beep/iam-sdk/*": ["../sdk/src/*"],
      "@beep/iam-domain": ["../domain/src/index"],
      "@beep/iam-domain/*": ["../domain/src/*"],
      "@beep/core-env/client": ["../../core/env/src/client"],
      "@beep/constants": ["../../common/constants/src/index"],
      "@beep/constants/*": ["../../common/constants/src/*"],
      "@beep/invariant": ["../../common/invariant/src/index"],
      "@beep/invariant/*": ["../../common/invariant/src/*"],
      "@beep/utils": ["../../common/utils/src/index"],
      "@beep/utils/*": ["../../common/utils/src/*"],
      "@beep/errors/shared": ["../../common/errors/src/shared"],
      "@beep/errors/client": ["../../common/errors/src/client"],
      "@beep/runtime-client": ["../../runtime/client/src/index"],
      "@beep/runtime-client/*": ["../../runtime/client/src/*"]
    }
  }
}
