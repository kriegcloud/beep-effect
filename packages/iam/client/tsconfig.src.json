{
  "extends": "../../../tsconfig.base.jsonc",
  "include": ["src"],
  "exclude": ["src/**/__tests__/**", "src/**/*.test.ts"],
  "references": [
    {
      "path": "../../../packages/common/types"
    },
    {
      "path": "../../../packages/common/utils"
    },
    {
      "path": "../../../packages/common/schema"
    },
    {
      "path": "../../../packages/common/identity"
    },
    {
      "path": "../../../packages/common/errors"
    },
    {
      "path": "../../../packages/common/constants"
    },
    {
      "path": "../../../packages/common/wrap"
    },
    {
      "path": "../../../packages/runtime/client"
    },
    {
      "path": "../../../packages/shared/domain"
    },
    {
      "path": "../../../packages/shared/client"
    },
    {
      "path": "../../../packages/shared/env"
    },
    {
      "path": "../../../packages/iam/domain"
    },
    {
      "path": "../../../packages/iam/server"
    },
    {
      "path": "../../../packages/ui/ui"
    }
  ],
  "compilerOptions": {
    "types": ["node", "bun"],
    "outDir": "build/src",
    "rootDir": "src",
    "moduleResolution": "bundler",
    "exactOptionalPropertyTypes": false,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "@effect/language-service",
        "transform": "@effect/language-service/transform",
        "diagnosticSeverity": {
          "classSelfMismatch": "off",
          "effectFnOpportunity": "off",
          "catchAllToMapError": "off",
          "forbiddenInSchema": "off",
          "unnecessaryYield": "off",
          "missingEffectError": "off",
          "unnecessaryPipeChain": "off",
          "unnecessaryFailYieldableError": "off",
          "redundantSchemaTagIdentifier": "off",
          "preferSchemaOverJson": "off"
        },
        "mermaidProvider": "mermaid.live",
        "namespaceImportPackages": ["effect", "@effect/*"]
      }
    ]
  }
}
