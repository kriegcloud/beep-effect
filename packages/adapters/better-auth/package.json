{
  "name": "@beep/better-auth",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "The better auth adapter for Beep",
  "publishConfig": {
    "access": "restricted",
    "directory": "build"
  },
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json",
    "./*": "./src/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kriegcloud/beep-effect.git",
    "directory": "packages/adapters/better-auth"
  },
  "scripts": {
    "auth:generate": "pnpm dotenvx pnpx @better-auth/cli@latest generate --config 'src/tmp/auth.ts' --output './src/tmp/auth-tables.ts' --y && pnpm lint:fix",
    "build": "pnpm build-esm && pnpm build-cjs && pnpm build-annotate",
    "dev": "tsc -b tsconfig.build.json --watch",
    "build-esm": "tsc -b tsconfig.build.json",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "check": "tsc -b tsconfig.json",
    "test": "vitest run",
    "clean": "rm -rf .tsbuildinfo node_modules coverage .next out dist build .turbo",
    "coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "dotenvx": "dotenvx run -f ../../../.env --",
    "lint:circular": "pnpm madge -c .",
    "execute": "pnpm tsx --tsconfig ./tsconfig.src.json ./src/execute.ts"
  },
  "dependencies": {
    "@beep/runtime": "workspace:*",
    "@beep/email": "workspace:^",
    "@beep/env": "workspace:^",
    "@beep/iam-db": "workspace:^",
    "@beep/constants": "workspace:*",
    "@beep/shared-tables": "workspace:^",
    "@beep/invariant": "workspace:^",
    "@beep/utils": "workspace:^",
    "@beep/iam-domain": "workspace:^",
    "@beep/shared-domain": "workspace:^",
    "@beep/schema": "workspace:^",
    "@beep/iam-tables": "workspace:^",
    "@beep/resend": "workspace:^",
    "@beep/db-scope": "workspace:^",
    "drizzle-orm": "*",
    "effect": "*",
    "react": "*",
    "react-dom": "*",
    "stripe": "*",
    "zod": "*",
    "@better-auth/stripe": "*",
    "better-call": "^1.0.18",
    "@dub/better-auth": "*",
    "@simplewebauthn/server": "*",
    "dub": "*",
    "pg": "*",
    "jose": "*",
    "better-auth": "*",
    "uuid": "*"
  },
  "devDependencies": {
    "@beep/types": "workspace:^",
    "@types/pg": "*",
    "@types/react": "*",
    "@types/react-dom": "*"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
