{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "references": [
    {
      "path": "../../iam/domain"
    },
    {
      "path": "../../iam/tables"
    },
    {
      "path": "../../iam/db"
    },
    {
      "path": "../../env"
    },
    {
      "path": "../resend"
    },
    {
      "path": "../../persistence/db-scope"
    }
  ],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@beep/better-auth/*": ["./src/*"],
      "@beep/iam-domain": ["../../iam/domain/src/index"],
      "@beep/iam-domain/*": ["../../iam/domain/src/*"],
      "@beep/iam-tables": ["../../iam/tables/src/index"],
      "@beep/iam-tables/*": ["../../iam/tables/src/*"],
      "@beep/iam-db": ["../../iam/db/src/index"],
      "@beep/iam-db/*": ["../../iam/db/src/*"],
      "@beep/env/client": ["../../env/src/client"],
      "@beep/env/server": ["../../env/src/server"],
      "@beep/resend": ["../resend/src/index"],
      "@beep/resend/*": ["../resend/src/*"],
      "@beep/db-scope": ["../../persistence/db-scope/src/index"],
      "@beep/db-scope/*": ["../../persistence/db-scope/src/*"]
    }
  }
}
