{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "references": [
    {
      "path": "../../env"
    },
    {
      "path": "../../common/types"
    },
    {
      "path": "../../common/constants"
    }
  ],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@beep/resend/*": ["./src/*"],
      "@beep/env/client": ["../../env/src/client"],
      "@beep/env/server": ["../../env/src/server"],
      "@beep/types": ["../../common/types/src/index"],
      "@beep/types/*": ["../../common/types/src/*"],
      "@beep/constants": ["../../common/constants/src/index"],
      "@beep/constants/*": ["../../common/constants/src/*"]
    }
  }
}
