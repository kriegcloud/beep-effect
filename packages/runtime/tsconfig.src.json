{
  "extends": "../../tsconfig.base.json",
  "include": ["src"],
  "references": [
    {
      "path": "../env"
    },
    {
      "path": "../common/errors"
    },
    {
      "path": "../common/constants"
    },
    {
      "path": "../persistence/db-scope"
    }
  ],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@beep/runtime/*": ["./src/*"],
      "@beep/env/server": ["../env/src/server"],
      "@beep/env/client": ["../env/src/client"],
      "@beep/errors/shared": ["../common/errors/src/shared-core"],
      "@beep/errors/client": ["../common/errors/src/client"],
      "@beep/constants": ["../common/constants/src/index"],
      "@beep/constants/*": ["../common/constants/src/*"],
      "@beep/db-scope": ["../persistence/db-scope/src/index"],
      "@beep/db-scope/*": ["../persistence/db-scope/src/*"]
    }
  }
}
