{
  "extends": "./tsconfig.src.json",
  "include": ["src"],
  "compilerOptions": {
    "types": ["node", "bun"],
    "outDir": "build/esm",
    "declarationDir": "build/dts",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2024",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "stripInternal": false
  },
  "references": [
    {
      "path": "../../common/types/tsconfig.build.json"
    },
    {
      "path": "../../common/utils/tsconfig.build.json"
    },
    {
      "path": "../../common/constants/tsconfig.build.json"
    },
    {
      "path": "../../shared/env/tsconfig.build.json"
    },
    {
      "path": "../../ui/ui/tsconfig.build.json"
    }
  ]
}
