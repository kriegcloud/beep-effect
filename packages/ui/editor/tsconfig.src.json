{
  "extends": "../../../tsconfig.base.jsonc",
  "include": ["src"],
  "exclude": ["build"],
  "references": [
    {
      "path": "tsconfig.src.json"
    },
    {
      "path": "../ui"
    },
    {
      "path": "../core"
    }
  ],
  "compilerOptions": {
    "types": ["node", "bun"],
    "outDir": "build/src",
    "rootDir": "src",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2024",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
