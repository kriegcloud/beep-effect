{
  "extends": "./tsconfig.src.json",
  "compilerOptions": {
    "types": ["node", "bun"],
    "outDir": "build/esm",
    "declarationDir": "build/dts",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2024",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "stripInternal": false
  },
  "references": [
    {
      "path": "../ui/tsconfig.build.json"
    },
    {
      "path": "../core/tsconfig.build.json"
    }
  ],
  "include": ["src"]
}
