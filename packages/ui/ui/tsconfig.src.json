{
  "extends": "../../../tsconfig.base.jsonc",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.mts",
    "src/**/*.cts",
    "src/**/*.d.ts"
  ],
  "exclude": [],
  "references": [
    {
      "path": "../../common/types"
    },
    {
      "path": "../../common/invariant"
    },
    {
      "path": "../../common/utils"
    },
    {
      "path": "../../common/identity"
    },
    {
      "path": "../../common/schema"
    },
    {
      "path": "../../common/constants"
    },
    {
      "path": "../../shared/domain"
    },
    {
      "path": "../core"
    }
  ],
  "compilerOptions": {
    "types": ["node", "bun", "react"],
    "outDir": "build/src",

    "rootDir": "src",

    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "target": "es2022",
    "moduleResolution": "bundler",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
