# =============================================================================
# PostgreSQL-Enabled Local Development
# =============================================================================
# Use with: bun --env-file=.env.postgres run src/server.ts

# --- PostgreSQL Configuration (enables durable workflows) ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=workflow
POSTGRES_USER=workflow
POSTGRES_PASSWORD=workflow

# --- LLM Configuration ---
LLM_PROVIDER=anthropic
LLM_API_KEY=your-anthropic-api-key-here
LLM_MODEL=claude-haiku-4-5-20251001
LLM_TIMEOUT_MS=60000
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.1

# --- Storage Configuration ---
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=/tmp/effect-ontology-dev

# --- Ontology Configuration ---
# Paths relative to STORAGE_LOCAL_PATH (/tmp/effect-ontology-dev)
ONTOLOGY_PATH=canonical/seattle/ontology.ttl
ONTOLOGY_EXTERNAL_VOCABS_PATH=canonical/external/merged.ttl
ONTOLOGY_REGISTRY_PATH=registry.json
ONTOLOGY_SHACL_PATH=canonical/seattle/shapes.ttl
ONTOLOGY_CACHE_TTL=3600

# --- Runtime Configuration ---
RUNTIME_CONCURRENCY=4
RUNTIME_LLM_CONCURRENCY=2

# --- Validation Configuration ---
# For development: log SHACL violations but don't fail workflows
VALIDATION_LOG_ONLY=true
VALIDATION_FAIL_ON_VIOLATION=true
VALIDATION_FAIL_ON_WARNING=false

# --- Server Configuration ---
PORT=8080
NODE_ENV=development
