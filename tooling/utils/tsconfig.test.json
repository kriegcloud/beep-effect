{
  "extends": "../../tsconfig.base.json",
  "include": ["test"],
  "references": [
    {
      "path": "tsconfig.src.json"
    },
    {
      "path": "../../packages/common/types"
    }
  ],
  "compilerOptions": {
    "types": ["node", "bun"],
    "tsBuildInfoFile": ".tsbuildinfo/test.tsbuildinfo",
    "rootDir": "test",
    "noEmit": true,
    "paths": {
      "*": ["./*"],
      "@beep/tooling-utils": ["./src/index.js"],
      "@beep/tooling-utils/*": ["./src/*.js"],
      "@beep/types": ["../../packages/common/types/src/index.js"],
      "@beep/types/*": ["../../packages/common/types/src/*.js"]
    }
  }
}
