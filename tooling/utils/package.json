{
  "name": "@beep/tooling-utils",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "The tooling-utils package. contains useful utilities for tooling packages",
  "repository": {
    "type": "git",
    "url": "git@github.com:kriegcloud/beep-effect.git",
    "directory": "tooling/utils"
  },
  "publishConfig": {
    "access": "restricted",
    "directory": "build"
  },
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "check": "tsc -b tsconfig.json",
    "clean": "rm -rf .tsbuildinfo node_modules coverage .next out dist build .turbo .tmp-FsUtils-tests",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "lint:circular": "bunx madge -c .",
    "test": "bun test",
    "coverage": "bun test --coverage"
  },
  "peerDependencies": {
    "@effect/platform": "catalog:",
    "@effect/platform-bun": "catalog:",
    "effect": "catalog:",
    "glob": "^11.0.3",
    "@effect/cluster": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@beep/types": "workspace:^"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
