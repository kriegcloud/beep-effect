{
  "extends": "../../tsconfig.base.jsonc",
  "include": ["src"],
  "exclude": [],
  "references": [
    {
      "path": "../../packages/common/types"
    }
  ],
  "compilerOptions": {
    "types": ["bun", "node"],
    "outDir": "build/src",
    "rootDir": "src",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "isolatedModules": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
