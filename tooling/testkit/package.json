{
  "name": "@beep/testkit",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "The testing utilities package",
  "repository": {
    "type": "git",
    "url": "git@github.com:kriegcloud/beep-effect.git",
    "directory": "tooling/testkit"
  },
  "publishConfig": {
    "access": "restricted",
    "directory": "build"
  },
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "check": "tsc -b tsconfig.json",
    "clean": "rm -rf .tsbuildinfo node_modules coverage .next out dist build .turbo",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "lint:circular": "pnpm madge -c ."
  },
  "peerDependencies": {
    "@effect/platform": "*",
    "effect": "*"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
