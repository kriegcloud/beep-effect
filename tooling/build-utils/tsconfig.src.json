{
  "extends": "../../tsconfig.base.jsonc",
  "include": ["src"],
  "references": [
    {
      "path": "../utils"
    },
    {
      "path": "../../packages/common/types"
    }
  ],
  "exclude": [],
  "compilerOptions": {
    "types": ["node", "bun"],
    "outDir": "build/src",
    "target": "ES2024",
    "exactOptionalPropertyTypes": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "rootDir": "src"
  }
}
