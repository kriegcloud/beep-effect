{
  "name": "@beep/build-utils",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "Next.js configuration utilities with Effect-based security, PWA, and build optimization",
  "repository": {
    "type": "git",
    "url": "git@github.com:kriegcloud/beep-effect.git",
    "directory": "tooling/build-utils"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "directory": "dist",
    "linkDirectory": false
  },
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./build/esm/index.js",
      "default": "./build/esm/index.js",
      "types": "./build/dts/index.d.ts"
    },
    "./package.json": "./package.json",
    "./pwa/index": {
      "bun": "./src/pwa/index.ts",
      "import": "./build/esm/pwa/index.js",
      "default": "./build/esm/pwa/index.js",
      "types": "./build/dts/pwa/index.d.ts"
    },
    "./pwa": {
      "bun": "./src/pwa/index.ts",
      "import": "./build/esm/pwa/index.js",
      "default": "./build/esm/pwa/index.js",
      "types": "./build/dts/pwa/index.d.ts"
    },
    "./pwa/*": {
      "bun": "./src/pwa/*.ts",
      "import": "./build/esm/pwa/*.js",
      "default": "./build/esm/pwa/*.js",
      "types": "./build/dts/pwa/*.d.ts"
    },
    "./*": {
      "bun": "./src/*.ts",
      "import": "./build/esm/*.js",
      "default": "./build/esm/*.js",
      "types": "./build/dts/*.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "check": "tsc -b tsconfig.json",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "test": "bun test",
    "coverage": "bun test --coverage",
    "lint:circular": "bunx madge -c .",
    "dotenvx": "dotenvx run -f ../../.env --",
    "execute": "TSX_TSCONFIG_PATH=./tsconfig.src.json NODE_OPTIONS='--import tsx' bun run dotenvx -- bunx tsx ./src/execute.ts",
    "gen:secrets": "TSX_TSCONFIG_PATH=./tsconfig.src.json NODE_OPTIONS='--import tsx' bun run dotenvx -- bunx tsx ./src/generate-env-secrets.ts",
    "bootstrap": "tsx ./src/bootstrap.ts",
    "generate-public-paths": "bun run dotenvx -- bunx tsx src/generate-asset-paths.ts",
    "gen:locales": "bun run dotenvx -- bunx tsx src/generate-locales.ts",
    "iconify": "bunx dotenvx run -f ../../.env -- bun run ./src/iconify/index.ts",
    "purge": "bun src/purge.ts",
    "docs:lint": "bunx tsx ./src/run-docs-lint.ts",
    "docs:lint:file": "bunx tsx ./src/run-docs-lint.ts --file"
  },
  "dependencies": {
    "@beep/tooling-utils": "workspace:^",
    "@effect/platform": "catalog:",
    "@effect/platform-node": "catalog:",
    "@next/bundle-analyzer": "catalog:",
    "@next/mdx": "catalog:",
    "babel-loader": "catalog:",
    "clean-webpack-plugin": "catalog:",
    "effect": "catalog:",
    "globby": "catalog:",
    "next": "catalog:",
    "terser-webpack-plugin": "catalog:",
    "typescript": "catalog:",
    "webpack": "catalog:",
    "workbox-build": "catalog:",
    "workbox-core": "catalog:",
    "workbox-webpack-plugin": "catalog:",
    "workbox-window": "catalog:"
  },
  "devDependencies": {
    "@effect/platform": "catalog:",
    "@effect/platform-node": "catalog:",
    "@total-typescript/ts-reset": "catalog:",
    "@types/babel__core": "catalog:",
    "effect": "catalog:",
    "typescript": "catalog:"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
