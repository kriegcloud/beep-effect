{
  "name": "@beep/repo-scripts",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "The repo scripts package. contains useful scripts and generators for the repo",
  "repository": {
    "type": "git",
    "url": "git@github.com:kriegcloud/beep-effect.git",
    "directory": "tooling/repo-scripts"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "directory": "dist",
    "linkDirectory": false
  },
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "check": "tsgo --noEmit -p tsconfig.json",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "test": "bun test",
    "coverage": "bun test --coverage",
    "lint:circular": "bunx madge -c .",
    "dotenvx": "dotenvx run -f ../../.env --",
    "execute": "TSX_TSCONFIG_PATH=./tsconfig.src.json NODE_OPTIONS='--import tsx' bun run dotenvx -- bunx tsx ./src/execute.ts",
    "gen:secrets": "TSX_TSCONFIG_PATH=./tsconfig.src.json NODE_OPTIONS='--import tsx' bun run dotenvx -- bunx tsx ./src/generate-env-secrets.ts",
    "bootstrap": "tsx ./src/bootstrap.ts",
    "generate-public-paths": "bun run dotenvx -- bunx tsx src/generate-asset-paths.ts",
    "gen:locales": "bun run dotenvx -- bunx tsx src/generate-locales.ts",
    "iconify": "bunx dotenvx run -f ../../.env -- bun run ./src/iconify/index.ts",
    "purge": "bun src/purge.ts",
    "docs:lint": "bunx tsx ./src/run-docs-lint.ts",
    "docs:lint:file": "bunx tsx ./src/run-docs-lint.ts --file"
  },
  "dependencies": {
    "@beep/schema": "workspace:^",
    "@beep/tooling-utils": "workspace:^",
    "@beep/constants": "workspace:^",
    "@effect/cli": "catalog:",
    "@effect/cluster": "catalog:",
    "@effect/platform": "catalog:",
    "@effect/platform-bun": "catalog:",
    "@effect/workflow": "catalog:",
    "@jsquash/avif": "catalog:",
    "@jsquash/jpeg": "catalog:",
    "@jsquash/jxl": "catalog:",
    "@jsquash/png": "catalog:",
    "@jsquash/webp": "catalog:",
    "effect": "catalog:",
    "glob": "catalog:",
    "jscodeshift": "catalog:",
    "picocolors": "catalog:",
    "ts-morph": "catalog:",
    "typescript": "catalog:"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "catalog:",
    "@types/jscodeshift": "catalog:",
    "typescript": "catalog:"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
