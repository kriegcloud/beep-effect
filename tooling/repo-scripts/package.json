{
  "name": "@beep/repo-scripts",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "The repo scripts package. contains useful scripts and generators for the repo",
  "repository": {
    "type": "git",
    "url": "git@github.com:kriegcloud/beep-effect.git",
    "directory": "tooling/repo-scripts"
  },
  "publishConfig": {
    "access": "restricted",
    "directory": "build"
  },
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "check": "tsc -b tsconfig.json",
    "clean": "rm -rf .tsbuildinfo node_modules coverage .next out dist build .turbo",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "lint:circular": "pnpm madge -c .",
    "dotenvx": "dotenvx run -f ../../.env --",
    "execute": "TSX_TSCONFIG_PATH=./tsconfig.src.json NODE_OPTIONS='--import tsx' pnpm dotenvx tsx ./src/execute.ts",
    "generate-public-paths": "pnpm dotenvx tsx src/generate-asset-paths.ts",
    "convert-public-images-to-nextgen": "pnpm dotenvx tsx src/convert-public-images-to-nextgen.ts"
  },
  "dependencies": {
    "@beep/utils": "workspace:^",
    "@beep/constants": "workspace:^",
    "@beep/invariant": "workspace:^",
    "@beep/schema": "workspace:^",
    "@beep/tooling-utils": "workspace:^",
    "@effect/platform": "*",
    "@effect/cluster": "*",
    "@effect/workflow": "*",
    "@effect/platform-node": "*",
    "glob": "^11.0.3",
    "effect": "*",
    "@jsquash/webp": "^1.5.0",
    "@jsquash/avif": "^2.1.1",
    "@jsquash/jpeg": "^1.6.0",
    "@jsquash/jxl": "^1.3.0",
    "@jsquash/png": "^3.1.1"

  },
  "devDependencies": {
    "@beep/types": "workspace:^"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
